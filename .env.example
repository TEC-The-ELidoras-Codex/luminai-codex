## .env.example
# Example environment variables for local development.
# DO NOT store real secrets in this file.
# Copy to `.env.local` and fill in your real secrets for local development.
# NEVER commit your real `.env.local` to git!

# ================================================================================
# CORE SETTINGS
# ================================================================================

ENVIRONMENT=development
DEBUG=true

# ================================================================================
# AI / ML PROVIDERS
# ================================================================================

OPENAI_API_KEY=<SET_VIA_SECRETS>
OPENAI_ORG_ID=<SET_VIA_SECRETS>
TEC_OPENAI_API_KEY=<SET_VIA_SECRETS>
CLAUDE_API_KEY_API_KEY=<SET_VIA_SECRETS>
XAI_API_KEY=<SET_VIA_SECRETS>

# ================================================================================
# GITHUB INTEGRATION
# ================================================================================

GITHUB_TOKEN=<SET_VIA_SECRETS>
GITHUB_APP_ID=<SET_VIA_SECRETS>
GITHUB_CLIENT_ID=<SET_VIA_SECRETS>
GITHUB_CLIENT_SECRET=<SET_VIA_SECRETS>
GITHUB_INSTALLATION_ID=<SET_VIA_SECRETS>
GITHUB_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----
<SET_VIA_SECRETS>
-----END RSA PRIVATE KEY-----
GITHUB_WEBHOOK_SECRET=<SET_VIA_SECRETS>

# ================================================================================
# NOTION INTEGRATION
# ================================================================================

NOTION_TOKEN=<SET_VIA_SECRETS>

# ================================================================================
# WORDPRESS.COM INTEGRATION
# ================================================================================

TEC_WPCOM_API_PASS=<SET_VIA_SECRETS>
WPCOM_SSH_HOST=sftp.wp.com
WPCOM_SSH_PORT=22
WPCOM_SSH_USER=<SET_VIA_SECRETS>
WPCOM_SSH_TARGET=/htdocs/wp-content/plugins/tec-tgcr
WPCOM_SSH_PRIVATE_KEY=-----BEGIN OPENSSH PRIVATE KEY-----
<SET_VIA_SECRETS>
-----END OPENSSH PRIVATE KEY-----

# ================================================================================
# CONTENT & WORLD-BUILDING APIs
# ================================================================================

WORLDANVIL_API_KEY=<SET_VIA_SECRETS>
WORLDANVIL_API_BASE=https://www.worldanvil.com/api
WORLDANVIL_USER_ID=<SET_VIA_SECRETS>
CIVITAI_API_KEY=<SET_VIA_SECRETS>
CIVITAI_API_BASE=https://civitai.com/api/v1

# ================================================================================
# SPOTIFY INTEGRATION
# ================================================================================

SPOTIFY_CLIENT_ID=<SET_VIA_SECRETS>
SPOTIFY_CLIENT_SECRET=<SET_VIA_SECRETS>

# ================================================================================
# ARCADIA RESONANCE BACKEND
# ================================================================================

TEC_ARCADIA_URL=http://localhost:8080/resonance
TEC_ARCADIA_API_KEY=<SET_VIA_SECRETS> # API key for Arcadia backend authentication

# ================================================================================
# LOCAL DEVELOPMENT TOOLS
# ================================================================================

SD_API_URL=http://127.0.0.1:7860
SD_API_KEY=
BLENDER_PATH=<your-blender-path>
GITLAB_PAT=<SET_VIA_SECRETS>
CONNECT_ZOHO_SCOPE_ID=<SET_VIA_SECRETS>
CONNECT_ZOHO_PARTITION_ID=<SET_VIA_SECRETS>
ZOHO_VANI_API_KEY=<SET_VIA_SECRETS>
TEC_OLLAMA_API_KEY=<SET_VIA_SECRETS>
TEC_RUNWAY_API_KEY=<SET_VIA_SECRETS>
FOLD_API_URL=<SET_VIA_SECRETS> # API URL for Fold service

# ================================================================================
# WEBSITE CONFIGURATION
# ================================================================================

WEBSITE_URL=https://elidoras.codex
WEBSITE_API_KEY=<SET_VIA_SECRETS>

# ================================================================================
# BACKEND CONFIGURATION
# ================================================================================

PORT=8000
HOST=0.0.0.0

# ================================================================================
# DATABASE CONFIGURATION
# ================================================================================

DATABASE_URL=postgresql://user:password@localhost:5432/luminai
REDIS_URL=redis://localhost:6379/0

# ================================================================================
# SECURITY
# ================================================================================

SECRET_KEY=<SET_VIA_SECRETS>
CORS_ORIGINS=http://localhost:3000,https://elidoras.codex

# ================================================================================
# LOGGING
# ================================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/app.log

